<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default" >
      <div class="panel-heading" >
        <h3 class="panel-title"><%= @category.name %></h3>
      </div>

      <div class="panel-body" >
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dd><img src = <%= @category.picture1 %> class = "img-responsive"></dd>
            </dl>

            <div class="btn-group btn-group-justified">
              <a href="/categories" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>
            </div>

            <div>
            </div>

          </div>
        </div>
      </div>

      <ul class="list-group">
        <li class="list-group-item list-group-item-success">
        What's in your <%= @category.name %> category</li>
        <% the_id = @category.id%>
        <% items = Item.where(:category_id => the_id)%>
        <% items.each do |item|%>
          <div class="panel-body">
            <dl>
              <div class="col-xs-4">
              <dd><img src=<%= item.picture2 %> class = "img-responsive"></dd>
              </div>

              <div class="col-xs-4">
              <dd>$<%= item.price %></dd>
              </div>

              <div class="col-xs-4">
              <dd><%= item.quantity %></dd>
              </div>
            </dl>
          </div>
          <div class="btn-group btn-group-justified">
          <a href="/items/<%= item.id %>" class="btn btn-secondary">
            <i class="fa fa-search-plus"></i>
          </a>

          <a href="/items/<%= item.id %>/edit" class="btn btn-tertiary">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_item/<%= item.id %>" class="btn btn-secondary" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>

        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
